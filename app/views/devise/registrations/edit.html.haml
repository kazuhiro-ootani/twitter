#header-bar

  .top-content
    .top-content__left
      %ul.navigation
        = link_to root_path do
          %li.navigation.header-list
            .top-content__home
              %span.fa.fa-home
              %span.text
                ホーム
        %li.navigation.header-list
          .top-content__notice
            %span.fa.fa-notice
            %span.text
              通知
        %li.navigation.header-list
