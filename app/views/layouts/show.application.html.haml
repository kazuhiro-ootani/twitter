!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Twitter
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
  %body
    #header-bar

      .top-content
        .top-content__left
          %ul.navigation
            = link_to root_path do
              %li.navigation.header-list
                .top-content__home
                  %span.fa.fa-home
                  %span.text
                    ホーム
            %li.navigation.header-list
              .top-content__notice
                %span.fa.fa-notice
                %span.text
                  通知
            %li.navigation.header-list
              .top-content__direct-message
                %span.fa.fa-direct-message
                %span.text
                  メッセージ
        =link_to root_path do
          %i.fa.fa-twitter

        .top-content__right
          .top-content__right-block
            .search
              =form_tag("/search", method: "get",class: "form-tag-search") do
                %input{placeholder: "キーワード検索",name:"keyword" ,class: "input-search"}
                = button_tag(class: "search--btn") do
                  %i.fa.fa-search

          %ul.link__icon
            %li.user__icon.header-list
              = image_tag("http://www.starico-03.com/stamp/outline/a231269-0.png", class: "icon-size")
              %ul#drop-child
                = link_to user_path(current_user), class: "pulldown-link" do
                  %li.pulldown-list
                    %span.pulldown-username
                      = current_user.username
                    %span.pulldown-notification
                      プロフィールを表示
                  %li.pulldown-divider
                  %li.pulldown-list
                    %span.pulldown-main-notification
                      プロフィール編集
                  = link_to destroy_user_session_path, method: :delete,  class: "pulldown-link" do
                    %li.pulldown-list
                      %span.pulldown-main-notification
                        ログアウト


              %li.tweet__btn.header-list
                = image_tag("http://www.fastpic.jp/images.php?file=3402064864.png",class: "tweet--btn")


    .profile-page
      .profile-page-img
        = image_tag("http://photosku.com/img/slick/02.jpg", class: "profile-header-img")
        .profile-page-user-icon
          - if @user.user_img
            = image_tag(@user.user_img, class: "profile-icon-size")
          -else
            = image_tag("http://www.starico-03.com/stamp/outline/a231269-0.png", class: "profile-icon-size")
    .profile-nav-bar
      .profile-sub-nav
        .profile-hidden-nav
        .profile-main-nav
          .profile-main-nav-inner
            %ul.main-nav-contents
              %li.main-nav-content
                = link_to user_path(@user) do
                  %span.nav-tweet-text.nav-info
                    ツイート
                  %span.nav-tweet-number.nav-info
                    = @user.tweets.count
              %li.main-nav-content
                = link_to following_path(@user) do
                  %span.nav-tweet-text.nav-info
                    フォロー
                  %span.nav-tweet-number.nav-info
                    = @user.following.count
              %li.main-nav-content
                = link_to followed_path(@user) do
                  %span.nav-tweet-text.nav-info
                    フォロワー
                  %span.nav-tweet-number.nav-info
                    = @user.followers.count
              %li.main-nav-content
                = link_to favorite_path(@user) do
                  %span.nav-tweet-text.nav-info
                    いいね
                  %span.nav-tweet-number.nav-info
                    = @user.favorites.count
              %li.main-nav-content
                %span.nav-tweet-text.nav-info
                  リスト
                %span.nav-tweet-number.nav-info
                  1
              %li.main-nav-content
                %span.nav-tweet-text.nav-info
                  モーメント
                %span.nav-tweet-number.nav-info
                  0
            - if (@user.id == current_user.id)
              .profile-edit-btn-wrap
                %button.profile-edit-btn
                  プロフィール編集
            - else
              -if current_user.following?(@user)
                .profile-edit-btn-wrap
                  = form_for(current_user.active_relationships.find_by(followed_id: @user.id), html:{ method: :delete }) do |f|
                    = f.submit "フォロー解除する", class: "profile-edit-btn"
              -else
                .profile-edit-btn-wrap
                  = form_for(current_user.active_relationships.build) do |f|
                    = hidden_field_tag :following_id, @user.id
                    =f.submit "フォローする", class: "profile-edit-btn"

    .info-container
      .info-container-inner
        .profile-nav-left
          .profile-nav-left-info
