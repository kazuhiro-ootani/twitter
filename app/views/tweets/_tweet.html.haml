  .tweet-main-content__left
    .user-profile
      .user-profile__head
        = image_tag("http://cdn-ak.f.st-hatena.com/images/fotolife/S/SikisimaHisayuki/20160323/20160323231426.png", class: "header_img")
      .user-profile__bottom
        -if current_user.user_img
          =image_tag(current_user.user_img, class: "icon_img")
        -else
          =image_tag("http://www.starico-03.com/stamp/outline/a231269-0.png", class: "icon_img")

        .user-name
          .nickname
            = current_user.nickname
          .id
            = current_user.username
