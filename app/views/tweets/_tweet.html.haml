.tweet-center-page
  .message-formbox
    .message-user-box
      =image_tag("http://www.starico-03.com/stamp/outline/a231269-0.png", class: "user-img-box")
    = form_for @tweet,html: {class: 'message-tweet-form"'}  do |f|
      = f.text_area :text, class: "message-input", placeholder: "いまどうしてる？"
      .fa.fa-camera.pre_camera
      .tweet-box-toolbar
        .tweet-box-extra
          .fa.fa-camera.new_camera
          .fa.fa-picture-o
          .fa.fa-bar-chart
          .fa.fa-map-
        .tweet-box-tweet-btn
          %span.tweet-counter
            140
            = button_tag type: :submit, id:"message-tweet-button" do
              =image_tag("http://www.fastpic.jp/images.php?file=3402064864.png",class: "new-tweet-btn")
  .message-alarm
    300件の新着ツイートを表示
  .message-tweet-long
    %ul.tweet-lists
      = render partial: 'tweets/user_text',collection: feed_tweets, as:'tweet'

