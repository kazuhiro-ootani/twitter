#header-bar

  .top-content
    .top-content__left
      %ul.navigation
        = link_to root_path do
          %li.navigation
            .top-content__home
              %span.fa.fa-home
              %span.text
                ホーム
        %li.navigation
          .top-content__notice
            %span.fa.fa-notice
            %span.text
              通知
        %li.navigation
          .top-content__direct-message
            %span.fa.fa-direct-message
            %span.text
              メッセージ
    =link_to root_path do
      %i.fa.fa-twitter

    .top-content__right
      .top-content__right-block
        .search
          =form_tag("/search", method: "get",class: "form-tag-search") do
            %input{placeholder: "キーワード検索",name:"keyword" ,class: "input-search"}
            = button_tag(class: "search--btn") do
              %i.fa.fa-search

        %ul.link__icon
          %li.user__icon
            = link_to image_tag("http://www.starico-03.com/stamp/outline/a231269-0.png", class: "icon-size"),destroy_user_session_path, method: :delete

          %li.tweet__btn
            = image_tag("http://www.fastpic.jp/images.php?file=3402064864.png",class: "tweet--btn")

= render partial: 'tweets/tweet',locals: {feed_tweets: @feed_tweets}
